<div class="slider valign-wrapper">
  <ul class="slides">
    <li>
      <img src="http://www.sftravel.com/sites/sftraveldev.prod.acquia-sites.com/files/SanFrancisco_0.jpg">
      <div class="caption center-align">
        <h3>Let us guide you...</h3>
      </div>
    </li>
    <li>
      <img src="http://www.homewoodsuitesseattle.com/img/home/hotel-near-seattle-space-needle.jpg">
      <div class="caption right-align">
        <h3>Welcome to Vagabon</h3>
        <h5 class="light grey-text text-lighten-3">Your adventure awaits.</h5>
      </div>
    </li>
  </ul>
</div>


<div class="row">
  <div class="col s12 m4">
    <h4 class="center">Featured City</h4>
    <% @locations.each do |location| %>
      <div class="card horizontal">
        <div class="card-image">
          <a href="<%= city_path(location) %>">
            <img src="<%= location.image %>">
          </a>
        </div>
        <div class="card-stacked">
          <div class="card-content">
              <h3><%= location.name %></h3>
            </div>
          <div class="card-action">
            <%= link_to "Find Articles!", city_path(location) %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="center">
      <%= button_to "See All Cities", cities_path , method: "get", class: "waves-effect waves-light btn" %>
    </div>
  </div>
  <div class="col s12 m4">
    <h4 class="center">Recent Posts</h4>
    <% @articles.each do |article| %>
    <div class="card horizontal">
      <div class="card-image valign-wrapper">
        <%= cl_image_tag(article.user.image, :width => 100, :crop => :thumb, :gravity => :face) %>
      </div>
      <div class="card-stacked">
        <span class="card-title"><%= article.title %> - <%= article.location.name %><% if current_user && current_user.id == article.user.id %>
        <%= link_to 'mode_edit', edit_article_path(article), class: "right material-icons" %>
        <% end %></span>
        <div class="card-content">
          <p><%= truncate(article.content, length: 75, separator: ' ')  %></p>
        </div>
        <div class="card-action">
          <%= link_to "Read More!", article_path(article) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col s12 m4">

  </div>
</div>
