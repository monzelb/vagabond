<div class="container">
  <% if current_user.id.to_s === params[:id].to_s %>
  <h3>Welcome to your Profile Page, <%= @user.first_name %></h3>
  <% else %>
  <h3><%= @user.first_name %></h3>
  <% end %>


  <div class="picture">
    <%= @user.image %>
  </div>

  <div class="info">
    <ul>
      <li>Name:</li>
      <li><%= @user.first_name %> <%= @user.last_name %></li>
    </ul>
    <ul>
      <li>Date Joined:</li>
      <li><%= @user.created_at %></li>
    </ul>
    <ul>
      <li>Current City:</li>
      <li><%= @user.city %></li>
    </ul>
  </div>

  <% if current_user.id.to_s === params[:id].to_s %>
    <%= button_to "Edit Profile", edit_user_registration_path , method: "get" %>
  <% end %>

  <div class="articles">
  <h6><%= link_to 'New Article', new_article_path %></h6>
    <ul>
      <% @user.articles.each do |article| %>
      <li><%= article.title %></li>
      <li><%= article.content %></li>
      <li><%= link_to 'Edit Article', edit_article_path(article) %></li>
      <% end %>
    </ul>
  </div>
</div>
