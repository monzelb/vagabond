<div class="container">
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %>*<br />
    <%= f.text_field :first_name, autofocus: true, :required => true %>
  </div>

  <div class="field">
    <%= f.label :last_name %>*<br />
    <%= f.text_field :last_name, :required => true %>
  </div>

  <div class="field">
    <%= f.label :email %>*<br />
    <%= f.email_field :email, :required => true %>
  </div>

  <div class="field">
    <%= f.label :password %>*
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions center">
    <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>
  </div>
  <br>
  <% end %>
  <hr>
  <h5 class="center">Already a User?</h5>
  <div class="center">
    <%= button_to "Log In", new_user_session_path, method: "get", class: "waves-effect waves-light btn" %>
  </div>
  <br>
  <p class="right">* = required</p>
</div>
