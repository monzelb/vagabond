<div class="container">
  <div class= "row">
    <div class="col s12 m3" id="user-box">
      <div class="card-image">
        <a href="<%= user_path(@article.user) %>">
           <%= cl_image_tag(@article.user.image, :height => 150, :crop => :thumb, :gravity => :face) %>
       </a>
      </div>
      <div class="card-stacked" >
        <div class="card-content">
          <a href="<%= user_path(@article.user) %>"><p class="truncate"><%= @article.user.first_name %> <%= @article.user.last_name %></p></a>
          <p><%= @article.user.city%></p>
          <p>Joined: <%= @article.user.created_at.strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
    <div class="col m9">
      <h4 class="header"><%= @article.title %></h2>
      <div class="card horizontal">
        <div class="card-image valign-wrapper">
          <%= cl_image_tag(@article.location.image, :width => 100, :crop => :thumb) %>
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h6><%= @article.created_at.strftime("%B %d, %Y") %> - <%= @article.location.name %><% if current_user && current_user.id == @article.user.id %>
            <%= link_to 'mode_edit', edit_article_path(@article), class: "right material-icons" %>
            <% end %></h6>
            <hr>
            <p><%= @article.content %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

