<div class="container">
  <br>
  <%= form_for @article do |f| %>
  <div class="row">
    <div class="field">
      <%= f.label :location %><br />
      <%=collection_select(:article, :location_id, @locations, :id, :name, prompt: true, required: true)%>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, placeholder: @article.title, required: true %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area(:content, cols: 40, rows: 40, placeholder: @article.content, required: true) %>
    </div>
    <br>
    <div class="center field">
      <%= f.submit "Update Your Article", class: "waves-effect waves-light btn" %>
    </div>
    <br>
    </div>
  <% end %>
  <hr>
  <br>
  <div class="center">
    <%= button_to 'Delete Article', { controller: :articles, action: :destroy, id: @article.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "red btn" %>
  </div>
  <br>
</div>
