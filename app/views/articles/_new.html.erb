<div class="container">
  <br>
  <%= form_for @article do |f| %>
    <div class="row">
      <div class="field">
        <%= f.label :location %><br />
        <%=collection_select(:article, :location_id, @locations, :id, :name, prompt: true, required: true)%>
      </div>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, placeholder: "title", required: true %>
      </div>

      <div class="field">
        <%= f.label :picture %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area(:content, cols: 40, rows: 40, placeholder: "Share your story here...", required: true) %>
      </div>
      <br>
      <div class="center field">
        <%= f.submit "Create new post", class: "waves-effect waves-light btn" %>
      </div>
    </div>
  <% end %>
  <br>
</div>
